---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  arrow?: boolean;
  bold?: boolean;
  heading?: boolean;
}

const { arrow, bold, heading, class: className, ...props } = Astro.props;
---

<a
  {...props}
  class={`underline underline-offset-4 cursor-pointer transition inline-block w-fit"
${
  bold
    ? "font-bold decoration-dotted decoration-2 decoration-stone-400 hover:decoration-stone-200"
    : "text-stone-400 hover:text-stone-200 decoration-dashed"
}
${heading ? "text-base" : "text-sm"}
`}
