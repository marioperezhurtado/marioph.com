          <img 
            src={song.thumbnail} 
            alt={song.title} 
            class="object-cover w-20 aspect-square" 
          />
          <div class="flex flex-col gap-2 mt-2">
            <Link 
              href={song.url} 
              target="_blank" 
              rel="noopener noreferrer"
              bold
